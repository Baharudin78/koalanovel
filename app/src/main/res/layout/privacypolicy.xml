<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/whitelightbackground"
    android:orientation="vertical"
    tools:context=".Activity.Privacypolicy">

    <!--ToolBar-->
    <include layout="@layout/toolbar_with_back" />

    <!--Admob AdView-->
    <RelativeLayout
        android:id="@+id/rlAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/backgroundcolor"
        android:visibility="visible" />

    <!--Facebook AdView-->
    <LinearLayout
        android:id="@+id/lyFbAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="?attr/backgroundcolor"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:text=""
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/default_texts" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>